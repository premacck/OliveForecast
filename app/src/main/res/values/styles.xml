<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.CustomTabLayout" parent="Widget.Design.TabLayout">
        <!--<item name="android:background">@drawable/bg_white_with_top_shadow</item>-->
        <item name="tabTextAppearance">@style/AppTheme.CustomTabTextAppearance</item>
    </style>

    <style name="AppTheme.CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.CustomTextViewBig">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/text_30sp</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="AppTheme.CustomTextViewDefault">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/text_20sp</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="AppTheme.CustomTextViewListLarge">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/default_padding</item>
        <item name="android:paddingRight">@dimen/default_padding</item>
        <item name="android:paddingTop">@dimen/mini_padding</item>
        <item name="android:paddingBottom">@dimen/mini_padding</item>
        <item name="android:gravity">start|left|center_vertical</item>
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="AppTheme.CustomTextViewListDefault">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/default_padding</item>
        <item name="android:paddingRight">@dimen/default_padding</item>
        <item name="android:paddingTop">@dimen/mini_padding</item>
        <item name="android:paddingBottom">@dimen/mini_padding</item>
        <item name="android:gravity">end|right|center_vertical</item>
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="AppTheme.CustomCheckedTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/default_padding</item>
        <item name="android:paddingRight">@dimen/default_padding</item>
        <item name="android:paddingTop">@dimen/half_padding</item>
        <item name="android:paddingBottom">@dimen/half_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="AppTheme.CustomRecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">@dimen/default_padding</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="AppTheme.RoundedMaterialButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/bg_button_accent</item>
        <item name="android:foreground">@drawable/ripple_dark_rounded_2dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_16sp</item>
    </style>

</resources>
